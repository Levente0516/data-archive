<Window x:Class="PingPongGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.InputBindings>
        <KeyBinding Command="{Binding MovePadCommand}"
            CommandParameter="Right" Key="Right" />
        <KeyBinding Command="{Binding MovePadCommand}"
            CommandParameter="Left" Key="Left"/>
        <KeyBinding Command="{Binding StartGameCommand}" Key="Space" />
    </Window.InputBindings>
    <Grid Background="White" Width="{Binding GridSize, Mode=OneWay}" 
          Height="{Binding GridSize, Mode=OneWay}">
        <Ellipse Margin="{Binding BallStartPosition, Mode=OneWay}" Stroke="Blue" Fill="Blue"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Width="{Binding BallSize, Mode=OneWay}" Height="{Binding BallSize, Mode=OneWay}" 
                 x:Name ="Ball">
            
        </Ellipse>
        <Rectangle Fill="Black" Margin="{Binding PadStartPosition, Mode=OneWay}" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Width="{Binding PadSize, Mode=OneWay}" Height="{Binding PadSize, Mode=OneWay}"
                   x:Name="Pad" Stroke="Black">
            
        </Rectangle>
    </Grid>
</Window>
