<Window x:Class="Asteroids_WPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asteroids_WPF.View"
        mc:Ignorable="d"
        Title="Asteroids" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Save" Command="{Binding SaveGame}"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Load" Command="{Binding LoadGame}"></MenuItem>
            </MenuItem>
            <MenuItem Header="New Game" Command="{Binding NewGame}"></MenuItem>
            <Separator></Separator>
            <MenuItem Header="{Binding PauseButtonText}" Command="{Binding PauseResumeGame}"></MenuItem>
        </Menu>
        <Border Grid.Row="1" Margin="20" BorderBrush="Black" BorderThickness="2">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding Rows}"
                                     Columns="{Binding Columns}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding CellColor}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Time:"></TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding GameTime}"></TextBlock>
            </StatusBarItem>
            <Separator></Separator>
            <StatusBarItem>
                <TextBlock Text="Asteroid spawn chance:"></TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SpawnChance}"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
